@model AppUser
@{
    ViewData["Title"] = "Librarian profile";
}

<h2>@(Model != null && Model.LibrarianId != null ? "Промени" : "Нов") кориснички профил</h2>
<h4>Студент: @ViewData["FullNameId"]</h4>
<hr />
<div class="row">
    <form asp-action="LibrarianProfile" method="post">
        <div class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group" hidden>
                <input name="LibrarianId" class="form-control" value="@(Model != null ? Model.LibrarianId : @ViewData["LibrarianId"])" hidden />
            </div>
            <div class="form-group">
                <label for="Id">ID на корисник</label>
                <input asp-for="Id" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label for="PasswordHash">Хеширана лозинка</label>
                <input asp-for="PasswordHash" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label for="PhoneNumber">Тел. број</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Email">Email адреса</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group" >
                 <label for="Password">Лозинка</label>
                 <input name="Password" class="form-control" />
            </div>
            
            <hr />
            <div class="form-group">
                <input type="submit" value="@(Model != null && Model.LibrarianId != null ? "Зачувај" : "Внеси нов")" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>
<div>
    <a asp-controller="Librarian" asp-action="Index">Назад кон студентите</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

